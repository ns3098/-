{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
        "esModuleInterop": true,
        "noImplicitAny": false,
        "target": "es2017",
        "sourceMap": true,
        "baseUrl": "./src",
        "moduleResolution": "node",
        "typeRoots": [
            "src/types",
            "./node_modules/@types"
        ],
        "plugins": [{
            "name": "tslint-language-service"
        }],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
